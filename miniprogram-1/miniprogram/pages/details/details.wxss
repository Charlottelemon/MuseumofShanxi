/* miniprogram/pages/details/details.wxss */
page {
  /**background: #f6f6f6;**/
  width: 100%;
  height: 100%;
}

.fullscreen{
  width: 100vw;
  height: 100vh;
  /**display: flex;**/
}

.fullimage{
  width: 100%;
  height: 100%;
  z-index: 1;
}

.covertext{
  width: 5vw;
  height: 100vh;
  text-align: top;
  color: white;
  writing-mode: vertical-lr;
  font-size: 1.2rem;
  opacity: 0.8;
  z-index: 2;
  margin-left: 10rpx;
  margin-top: 10vh;
}

.coverbutton{
  width: 50rpx;
  height: 50rpx;
  z-index: 4;
}

.gohome{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 40vh;
  right: 10rpx;
  align-items: center;
  justify-content: center;
  /**background-color: gray;**/
  border-radius: 50%;
  z-index: 4;
}

.hover{
  background-color: rgba(77, 39, 216, 0.575);
  box-shadow: silver;
  border-radius: 50%;
  align-items: center;
}
 
.mask {
  position: absolute;
  z-index: 3;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
}
 
.content {
  position: absolute;
  z-index: 5;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 4px;
  padding: 30rpx;
  height: auto;
  background-color: #fff;
}
 
/*动画前初始位置*/
.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.title,.subtitle{
  position: fixed;
  display: flex;
  top: 10rpx;
  font-size: 40rpx;
  font-weight: 700;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  height: 100%;
  text-align: justify;
  color: black;
}

.subtitle{
  position: relative;
  column-width: 30px;
  margin-top: 50rpx;
  height: 100%;
}

.intro{
  position: relative;
  display: flex;
  text-align: justify;
  text-indent: 2em;
  font-size: 30rpx;
  top: 55rpx;
  color: black;
  column-width: 0px;
  writing-mode: sideways-lr;
}

.relative-item{
  position: relative;
  display: flex;
  padding: 0;
  max-height: 20vh;
  width: 100%;
  flex-direction: row;
  margin-top: 10rpx;
  flex-wrap: wrap;
  white-space: nowrap;
  overflow: hidden;
  box-sizing: border-box;
  overflow-y: hidden;
}

.item,.item-image{
  position: relative;
  display: inline-block;
  padding: 0;
  max-height: 19vh;
  margin: 0rpx;
  margin-left: 10rpx; 
  margin-right: 10rpx;
  width: 28vw;
  flex-direction: column;
  font-size: 30rpx;
  box-sizing: border-box;
}

.item-image{
  display: flex;
  max-height: 17vh;
}

.item-text{
  max-height: 3vh;
  display: flex;
  align-items: center;
  justify-content: center;
}