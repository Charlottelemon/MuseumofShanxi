/* miniprogram/pages/location/location.wxss */
.container{
  height: 100vh;
  background-color: rgb(173, 147, 143);
}

.location{
  width: 100vw;
  height: 100vw;
  border: black;
  border-width: thin;
  border-style: solid;
}

.home{
  bottom: 0vh;
  top: 100vh;
  margin-top: 10vh;
  margin-bottom: 0;
  width: 100vw;
  height: 8vh;
  border-radius: 3%;
  background-color: #e09077;
}

.hover{
  background-color: grey;
  box-shadow: silver;
  align-items: center;
}

.intext{
  width: 90vw;
  height: 12vh;
  border-style: ridge;
  border-radius: 2%;
  margin: 10vw;
  color: black;
  font-size: 25px;
  font-family: 'Courier New', Courier, monospace;
  font-weight: 600;
  align-items: center;
  justify-content: center;
  text-align: center;
}